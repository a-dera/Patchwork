<!-- IF $document_domain -->

document.domain = {$document_domain|js};

<!-- ELSE -->

(function()
{
    var $document = document,
        d = $document.domain,
        w = window.opener || window.parent,
        i;

    for (;;)
    {
        try
        {
            i = w.document.domain;
            break;
        }
        catch (e) {}

        i = d.indexOf('.');
        if (i < 0) break;
        d = d.substr(i+1);

        try
        {
            $document.domain = d;
        }
        catch (e)
        {
            break;
        }
    }
})();

<!-- END:IF -->
